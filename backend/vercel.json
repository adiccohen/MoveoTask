{
    "version": 2,
    "builds": [
      { "src": "server.js", "use": "@vercel/node" },
      { "src": "client/build", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server.js" },
      { "src": "/(.*)", "dest": "client/build/index.html" }
    ],
    "env": {
      "PG_USER": "@pg_user",
      "PG_HOST": "@pg_host",
      "PG_DATABASE": "@pg_database",
      "PG_PASSWORD": "@pg_password"
    }
  }